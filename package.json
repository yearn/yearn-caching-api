{
  "name": "yearn-api",
  "license": "MIT",
  "description": "Small and fast yearn.finance API",
  "private": true,
  "main": "app.mjs",
  "author": "nymmrx <nymmrx.eth>",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "tap \"test/**/*.test.mjs\"",
    "start": "fastify start -l info app.mjs --options",
    "dev": "fastify start -w -l info -P app.mjs --options",
    "lint": "eslint **/**.mjs"
  },
  "prettier": {
    "printWidth": 100
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {}
  },
  "dependencies": {
    "@ethersproject/abi": "^5.4.0",
    "@ethersproject/address": "^5.4.0",
    "@ethersproject/bignumber": "^5.4.1",
    "@ethersproject/contracts": "^5.4.0",
    "@ethersproject/providers": "^5.4.2",
    "@ladjs/graceful": "^1.0.5",
    "@sentry/node": "^6.17.4",
    "@sentry/tracing": "^6.17.4",
    "@yfi/sdk": "^1.0.0",
    "abstract-cache": "^1.0.1",
    "abstract-cache-redis": "^2.0.0",
    "bree": "^6.2.1",
    "cross-fetch": "^3.1.4",
    "dotenv": "^10.0.0",
    "fastify": "^3.27.0",
    "fastify-autoload": "^3.3.1",
    "fastify-caching": "^6.1.0",
    "fastify-cli": "^2.13.0",
    "fastify-cors": "^6.0.2",
    "fastify-metrics": "^8.0.0",
    "fastify-plugin": "^3.0.0",
    "fastify-redis": "^4.3.1",
    "fastify-sensible": "^3.1.0",
    "ioredis": "^4.27.6",
    "ms": "^2.1.3"
  },
  "devDependencies": {
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "prettier": "^2.3.2",
    "tap": "^15.0.9"
  }
}
